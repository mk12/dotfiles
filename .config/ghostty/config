theme = light:modern-light,dark:modern-dark

font-family = Iosevka
font-style = Medium
font-style-bold = Bold
font-style-italic = Medium Italic
font-style-bold-italic = Bold Italic
font-synthetic-style = false
font-size = 14

unfocused-split-opacity = 0.9
window-save-state = never
window-padding-x = 6

# With https://github.com/ghostty-org/ghostty/issues/6765 fixed,
# these will work in vim etc. too.
keybind = performable:page_up=scroll_page_up
keybind = performable:page_down=scroll_page_down
keybind = performable:cmd+up=scroll_to_top
keybind = performable:cmd+down=scroll_to_bottom
keybind = performable:shift+up=scroll_page_lines:-1
keybind = performable:shift+down=scroll_page_lines:1

keybind = super+delete=text:\x0b
keybind = cmd+shift+k=text:\x1b[107;6u
keybind = alt+shift+backspace=text:\x1bB
keybind = cmd+z=text:\x1b\\
keybind = cmd+shift+z=text:\x1b/
