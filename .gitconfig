[user]
    name = Mitchell Kember
    email = mk12360@gmail.com
[alias]
    s = status -s
    b = branch
    c = checkout
    d = diff
    dc = diff --cached
    a = add
    ap = add --patch
    cm = commit
    cmv = commit --verbose
    cma = commit --amend
    fx = commit --amend --reuse-message=HEAD
    rb = rebase
    cp = cherry-pick
    sh = stash
    u = pull
    p = push
    unstage = reset HEAD --
    last = log -1 HEAD
    lol = log --pretty=oneline --abbrev-commit --graph --decorate
[color]
    ui = auto
[core]
    excludesfile = ~/.gitignore
[diff]
    algorithm = minimal
    compactionHeuristic = true
    renames = true
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool "vimdiff"]
    cmd = $EDITOR -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
    prompt = false
[push]
    default = simple
[pull]
    rebase = true
[apply]
    whitespace = fix
