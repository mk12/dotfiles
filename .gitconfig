[user]
    name = Mitchell Kember
    email = mk12360@gmail.com
[alias]
    s = status -s
    b = branch
    c = checkout
    d = diff
    dc = diff --cached
    a = add
    ap = add --patch
    cm = commit
    cmv = commit --verbose
    cma = commit --amend
    cmav = commit --amend --verbose
    unamend = reset --soft HEAD@{1}
    fx = commit --amend --reuse-message=HEAD
    rb = rebase
    rbo = rebase HEAD~ --onto
    cp = cherry-pick
    sh = stash
    unstage = reset HEAD --
    l = log
    last = log -1 HEAD
    lol = log --oneline --graph --decorate
[color]
    ui = auto
[core]
    excludesfile = ~/.gitignore
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    hunk-header-style = "normal"
    zero-style = "normal"
    minus-style = "red"
    minus-emph-style = "black red"
    plus-style = "green"
    plus-emph-style = "black green"
    file-style = "bold blue"
    file-decoration-style = "bold blue underline"
    minus-empty-line-marker-style = "black brightcyan"
    plus-empty-line-marker-style = "black yellow"
[diff]
    algorithm = minimal
    compactionHeuristic = true
    renames = true
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool "vimdiff"]
    cmd = $EDITOR -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
    prompt = false
[push]
    default = simple
[pull]
    rebase = true
[apply]
    whitespace = fix
