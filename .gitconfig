[user]
	name = Mitchell Kember
	email = mk12360@gmail.com
[alias]
	s = status -s
	b = branch
	c = checkout
	d = diff
	dc = diff --cached
	a = add
	ap = add --patch
	cm = commit
	cmv = commit --verbose
	cma = commit --amend
	fx = commit --amend --reuse-message=HEAD
	rb = rebase
	cp = cherry-pick
	sh = stash
	unstage = reset HEAD --
	last = log -1 HEAD
	lol = log --pretty=oneline --abbrev-commit --graph --decorate
[color]
	ui = auto
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	pager = diff-highlight | less -RFX
[diff]
	tool = vimdiff
	prompt = false
	algorithm = minimal
	compactionHeuristic = true
	renames = true
[interactive]
	diffFilter = diff-highlight
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool "vimdiff"]
	path = nvim
[push]
	default = simple
[pull]
	rebase = true
[apply]
	whitespace = fix
